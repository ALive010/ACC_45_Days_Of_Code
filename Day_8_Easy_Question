#include <iostream>
using namespace std;

int main() 
{
	int t;
	cout << "Enter the number of test cases to be run : ";
	cin >> t;
	while(t--)
	{
		int x,y,a;
		cout << "Liter of water in geyser : ";
		cin >> x;
		
		cout << "Liter of water a bucket contain : ";
		cin >> y;
		a=x/(y*2);
		cout << "Total Person Who Can Bath: " << a <<endl;
	}
	return 0;
}
