#include <iostream>
using namespace std;

int main()
{
   int t,cars;
   cout<<"Enter Number Of Test cases: ";
   cin >>t;
   while(t--)
   {
       int n;
       cout<<"Total Persons: ";
       cin>>n;
       cars = n/4;
       if(n>0 && n<4)
       {
           cout<<"Number Of Car Required = 1"<<endl;
       }
       else if(n%4 == 0)
       {
           cout<<"Number Of Car Required = "<<cars<<endl;
       }
       else if(n>4 && n%4>0)
       {
           cout<<"Number Of Car Required = "<<cars+1<<endl;
       }
       else
       {
           cout<<"Wrong Input!"<<endl;
       }
   }
   return 0;
}
